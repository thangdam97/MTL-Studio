                        "proximity_penalty": {
                            "window": 100,
                            "action": "ESCALATE_TO_MAJOR",
                            "severity_override": "CRITICAL",
                            "fix_instruction": "Use strong verb or vary with 'began', direct verb, or action description"
                        }
                    },
                    {
                        "id": "began_to",
                        "regex": "\\bbegan to \\w+",
                        "display": "began to [verb]",
                        "fix": "Use direct verb: 'began to cry' → 'cried'",
                        "source": "AI process verb",
                        "proximity_penalty": {
                            "window": 100,
                            "action": "ESCALATE_TO_MAJOR",
                            "severity_override": "CRITICAL",
                            "fix_instruction": "Use direct verb or vary with 'started', action description"
                        }
                    },
                    {
                        "id": "proceeded_to",
                        "regex": "\\bproceeded to \\w+",
                        "display": "proceeded to [verb]",
                        "fix": "Use direct verb: 'proceeded to explain' → 'explained'",
                        "source": "AI process verb"
                    },
                    {
                        "id": "managed_to",
                        "regex": "\\bmanaged to \\w+",
                        "display": "managed to [verb]",
                        "fix": "Use direct verb unless difficulty matters: 'managed to escape' → 'escaped'",
                        "source": "AI process verb",
                        "proximity_penalty": {
                            "window": 150,
                            "action": "ESCALATE_TO_MAJOR",
                            "severity_override": "MAJOR",
                            "fix_instruction": "Replace with strong verb or distinct synonym showing effort/difficulty"
                        }
                    }
                ]
            },
            "nominalizations": {
                "description": "AI loves abstract nouns over direct statements",
                "patterns": [
                    {
                        "id": "the_fact_that",
                        "regex": "\\bthe fact that\\b",
                        "display": "the fact that",
                        "fix": "Restructure: 'The fact that she came' → 'That she came'",
