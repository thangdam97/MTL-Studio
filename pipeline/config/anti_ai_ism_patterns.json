{
    "_meta": {
        "version": "2.0",
        "description": "Anti-AI-ism patterns for prose quality detection with Echo Detection",
        "target_density_per_1k_words": 0.02,
        "reference": "RESEARCH_INDUSTRIAL_PRACTICES.md",
        "last_updated": "2026-01-29",
        "echo_detection": {
            "enabled": true,
            "description": "Proximity-based clustering detection - catches AI repetition within short distances",
            "default_proximity_window": 100,
            "proximity_thresholds": {
                "critical": 50,
                "major": 100,
                "minor": 150
            },
            "rationale": "AI reuses 'safe' sentence structures too close together, creating monotonous drone effect"
        }
    },
    "CRITICAL": {
        "description": "Direct translations that BLOCK publication",
        "patterns": [
            {
                "id": "asserting_presence",
                "regex": "asserting (?:their|its|his|her) presence",
                "display": "asserting presence",
                "fix": "Use: 'obvious' / 'impossible to ignore'",
                "source": "Literal Japanese (存在感をアピール)"
            },
            {
                "id": "release_pheromones",
                "regex": "release(?:d|s|ing)? (?:their|his|her|sweet)? ?pheromones?",
                "display": "release pheromones",
                "fix": "Use: 'ooze allure' / 'exude charm'",
                "source": "Pseudo-biological phrasing"
            },
            {
                "id": "noun_bridge",
                "regex": "had a (?:sadness|happiness|warmth|coldness|core|weight) to (?:it|them|him|her)",
                "display": "had a [noun] to it",
                "fix": "Use: 'looked sad' / 'carried weight' / 'spoke with conviction'",
                "source": "Abstract noun bridge (Japanese calque)"
            },
            {
                "id": "say_again_what",
                "regex": "let me say (?:it|that) again[,:]?\\s*what (?:is|was) this",
                "display": "Let me say it again, what is this",
                "fix": "Use: 'I'll say it again: what even IS this?!'",
                "source": "Literal もう一度言う translation"
            },
            {
                "id": "surreal_picture",
                "regex": "surreal (?:picture|scene|sight)",
                "display": "surreal picture/scene",
                "fix": "Use: 'absurd situation' / 'how did I end up here?'",
                "source": "Awkward literalism for 超現実的な光景"
            },
            {
                "id": "formidable_opponent",
                "regex": "(?:a |the )?formidable opponent",
                "display": "formidable opponent",
                "fix": "Use: 'tough nut to crack' / 'hard to handle'",
                "source": "Too formal for casual teen dialogue"
            }
        ]
    },
    "MAJOR": {
        "description": "Common translationese patterns requiring revision",
        "categories": {
            "japanese_calques": {
                "description": "Direct Japanese → English calques",
                "patterns": [
                    {
                        "id": "cannot_be_helped",
                        "regex": "\\bit cannot be helped\\b",
                        "display": "it cannot be helped",
                        "fix": "Use: 'nothing I can do' / 'oh well'",
                        "source": "Literal 仕方がない"
                    },
                    {
                        "id": "do_my_best",
                        "regex": "\\bi['']?ll do my best\\b",
                        "display": "I'll do my best",
                        "fix": "Use: 'I'll give it my all!' / 'Here goes!'",
                        "source": "Literal 頑張ります"
                    },
                    {
                        "id": "as_expected_of",
                        "regex": "\\bas expected of\\b",
                        "display": "as expected of",
                        "fix": "Use: 'that's [Name] for you' / 'classic [Name]'",
                        "source": "Literal さすが"
                    },
                    {
                        "id": "is_that_so",
                        "regex": "\\bis that so\\?",
                        "display": "is that so?",
                        "fix": "Use: 'oh really?' / 'huh' / 'is it now?'",
                        "source": "Literal そうですか"
                    }
                ]
            },
            "emotion_wrappers": {
                "description": "AI uses wrappers instead of direct emotion",
                "patterns": [
                    {
                        "id": "sense_of_emotion",
                        "regex": "a sense of (?:unease|dread|relief|joy|happiness|sadness|tension|nostalgia|accomplishment|excitement|pride|shame|guilt|fear|anxiety|impatience|security|belonging|urgency|wonder|awe|confusion)",
                        "display": "a sense of [emotion]",
                        "fix": "Use: direct emotion ('Unease filled the room' / 'Relief washed over me' / 'I felt accomplished')",
                        "source": "AI safety wrapper - adds unnecessary abstraction",
                        "proximity_penalty": {
                            "window": 100,
                            "action": "FLAG_ECHO",
                            "severity_override": "MAJOR",
                            "fix_instruction": "Vary emotional expression: direct statement, active verb, physical manifestation"
                        }
                    },
                    {
                        "id": "felt_sense_of",
                        "regex": "felt a sense of",
                        "display": "felt a sense of",
                        "fix": "Use: 'felt [adjective]' directly - double wrapper redundancy",
                        "source": "Double wrapper",
                        "proximity_penalty": {
                            "window": 75,
                            "action": "FLAG_ECHO",
                            "severity_override": "CRITICAL",
                            "fix_instruction": "Double wrapper is redundant - use 'felt [emotion]' or direct description"
                        }
                    },
                    {
                        "id": "could_sense",
                        "regex": "\\bcould sense (?:the |a |that )?\\w+",
                        "display": "could sense [noun/that]",
                        "fix": "Use: direct observation or 'noticed' / 'felt'",
                        "source": "AI emotion wrapper",
                        "proximity_penalty": {
                            "window": 100,
                            "action": "FLAG_ECHO",
                            "severity_override": "MAJOR",
                            "fix_instruction": "Vary with: 'noticed', 'felt', 'picked up on', or direct description of observation"
                        }
                    }
                ]
            },
            "filter_phrases": {
                "description": "AI uses these to hedge assertions",
                "patterns": [
                    {
                        "id": "felt_like_could",
                        "regex": "\\bfelt like (?:I |he |she |they |we )?(?:could|was|were|had)\\b",
                        "display": "felt like [subject] could/was",
                        "fix": "Remove filter: 'felt like I could' → 'I could'",
                        "source": "AI filter phrase"
                    },
                    {
                        "id": "seemed_to",
                        "regex": "\\bseemed to (?:be |have )?\\w+",
                        "display": "seemed to [verb]",
                        "fix": "Use direct verb or 'looked': 'seemed to smile' → 'smiled' / 'seemed to be tired' → 'was tired'",
                        "source": "AI filter phrase - hedges definitive observations",
                        "proximity_penalty": {
                            "window": 100,
                            "action": "FLAG_ECHO",
                            "severity_override": "MAJOR",
                            "fix_instruction": "Vary with: 'appeared', 'looked', direct observation, or remove entirely"
                        }
                    },
                    {
                        "id": "appeared_to",
                        "regex": "\\bappeared to (?:be )?\\w+",
                        "display": "appeared to [verb]",
                        "fix": "Use direct statement: 'appeared to be angry' → 'was angry' / 'looked angry'",
                        "source": "AI filter phrase",
                        "proximity_penalty": {
                            "window": 100,
                            "action": "FLAG_ECHO",
                            "severity_override": "MAJOR",
                            "fix_instruction": "Vary with: 'seemed', 'looked', specific detail, or direct statement"
                        }
                    },
                    {
                        "id": "found_myself",
                        "regex": "\\bI found myself \\w+ing",
                        "display": "I found myself [verb]ing",
                        "fix": "Use direct action: 'I found myself staring' → 'I stared'",
                        "source": "AI filter phrase",
                        "proximity_penalty": {
                            "window": 75,
                            "action": "FLAG_ECHO",
                            "severity_override": "CRITICAL",
                            "fix_instruction": "Use direct verb - character has agency over their actions"
                        }
                    },
                    {
                        "id": "couldnt_help_but",
                        "regex": "\\bcouldn'?t help but \\w+",
                        "display": "couldn't help but [verb]",
                        "fix": "Use direct action: 'couldn't help but smile' → 'smiled'",
                        "source": "AI passive agency removal - eliminates character intentionality",
                        "proximity_penalty": {
                            "window": 75,
                            "action": "FLAG_ECHO",
                            "severity_override": "CRITICAL",
                            "fix_instruction": "Use direct verb - character chooses their reactions"
                        }
                    },
                    {
                        "id": "almost_seemed",
                        "regex": "\\balmost seemed (?:to |like )?\\w+",
                        "display": "almost seemed [to/like]",
                        "fix": "Use direct observation: 'almost seemed to glow' → 'nearly glowed'",
                        "source": "AI double hedge",
                        "proximity_penalty": {
                            "window": 50,
                            "action": "FLAG_ECHO",
                            "severity_override": "MAJOR",
                            "fix_instruction": "Remove double hedging - pick one modifier or use direct statement"
                        }
                    },
                    {
                        "id": "looked_like_could",
                        "regex": "\\blooked like (?:he |she |they |it )?(?:could|was|were|might)\\b",
                        "display": "looked like [subject] could/was",
                        "fix": "Simplify: 'looked like she could cry' → 'looked ready to cry'",
                        "source": "AI filter phrase"
                    }
                ]
            },
            "ai_crutch_phrases": {
                "description": "AI filler phrases with no semantic value",
                "patterns": [
                    {
                        "id": "to_be_honest",
                        "regex": "\\b[Tt]o be honest,?",
                        "display": "to be honest",
                        "fix": "Remove entirely - adds no value. If character voice requires hesitation, use 'honestly' sparingly",
                        "source": "AI crutch phrase - pure filler"
                    },
                    {
                        "id": "to_be_fair",
                        "regex": "\\b[Tt]o be fair,?",
                        "display": "to be fair",
                        "fix": "Often unnecessary. Use 'Though' or 'Still' for contrast",
                        "source": "AI crutch phrase - overused"
                    },
                    {
                        "id": "at_end_of_day",
                        "regex": "\\bat the end of the day,?",
                        "display": "at the end of the day",
                        "fix": "Use 'ultimately' or 'in the end' if needed",
                        "source": "AI crutch phrase"
                    }
                ]
            },
            "process_verbs": {
                "description": "AI pads actions with unnecessary process verbs",
                "patterns": [
                    {
                        "id": "started_to",
                        "regex": "\\bstarted to \\w+",
                        "display": "started to [verb]",
                        "fix": "Use direct verb: 'started to walk' → 'walked'",
