  "VIETNAMESE_CRITICAL": {
    "description": "Vietnamese-specific AI-ism patterns that block publication quality",
    "target_language": "vi-VN",
    "patterns": [
      {
        "id": "mot_cach_passive",
        "regex": "một cách [a-zA-ZÀ-ỹ]+",
        "display": "một cách [adverb]",
        "fix": "Remove 'một cách' - use direct adverb modification. In 1st POV, convert ALL passive to active voice.",
        "source": "Literal translation of Japanese 〜的に/〜ように patterns",
        "severity": "CRITICAL",
        "case_study": {
          "volume": "0b24",
          "instances_found": 79,
          "instances_removed": 79,
          "chapters_affected": "01-05",
          "date_discovered": "2026-02-02",
          "impact": "AI-ism density reduced from 3.71/1k to 2.33/1k words",
          "grade_improvement": "91.5 → 94.0 (A grade achieved)"
        },
        "examples": {
          "bad": [
            "Cô ấy nói một cách lạnh lùng → (passive construction creates psychological distance)",
            "Tôi quan sát một cách cẩn thận → (1st POV should be direct experience)",
            "Anh ta hành động một cách nhanh chóng → (verbose wrapper around adverb)"
          ],
          "good": [
            "Cô ấy nói lạnh lùng → (direct adverb modification)",
            "Tôi quan sát cẩn thận → (1st POV active voice)",
            "Anh ta hành động nhanh chóng → (direct expression)"
          ]
        },
        "rationale": "'một cách' is a Japanese calque that Vietnamese native speakers avoid. It creates artificial distance between narrator and action. In 1st person POV, passive voice is ALWAYS wrong - the narrator experiences events directly, not through observation.",
        "detection_strategy": "Scan for 'một cách' + any Vietnamese adverb. Check POV: if 1st person (uses 'tôi', 'mình', 'tớ' pronouns), flag ALL passive constructions.",
        "fix_instruction": "1. Remove 'một cách' wrapper completely. 2. Place adverb directly after verb. 3. If 1st POV, verify voice is active (narrator does action, not receives/observes it).",
        "reference_documents": [
          "PROSE_OPTIMIZATION_REPORT.md",
          "AI_ISM_ANALYSIS.md",
          "AUDIT_REPORT_0b24.md"
        ]
      },
      {
        "id": "bi_duoc_first_person",
        "regex": "\\b(?:[Tt]ôi|[Mm]ình|[Tt]ớ)\\s+(?:bị|được)\\s+[a-zA-ZÀ-ỹ]+",
        "display": "[1st person pronoun] bị/được [verb]",
        "fix": "Convert to active voice: narrator experiences action directly, not passively.",
        "source": "First-person passive voice - violates POV immediacy principle",
        "severity": "CRITICAL",
        "rationale": "In Vietnamese 1st person narration, passive markers 'bị' (negative passive) and 'được' (positive passive) create psychological distance. The narrator should describe direct experience, not report on what happened to them as an observer.",
        "examples": {
          "bad": [
            "Tôi được Charlotte khen ngợi → (narrator passively receives praise)",
            "Mình bị cô ấy mắng → (narrator reports being scolded as external event)",
            "Tớ được mời đến → (narrator passively invited)"
          ],
          "good": [
            "Charlotte khen ngợi tôi → (active: Charlotte does action to narrator)",
            "Cô ấy mắng mình → (active: she scolds me)",
            "Họ mời tớ đến → (active: they invite me)"
          ]
        },
        "detection_strategy": "Match 1st person pronouns (tôi/mình/tớ) + passive markers (bị/được) + verb. Verify POV is 1st person narration.",
        "fix_instruction": "Restructure sentence to active voice: move actor to subject position, remove passive marker, keep narrator as object."
      }
    ],
    "pov_detection": {
      "first_person_markers": [
        "tôi",
        "mình",
        "tớ",
        "ta",
        "chúng tôi",
        "chúng mình"
      ],
      "passive_markers": [
        "bị",
        "được",
        "bị ... bởi",
        "được ... bởi"
      ],
      "rule": "In 1st person POV narration, ALL passive constructions must be converted to active voice for immediacy and natural Vietnamese prose."
    }
  }
