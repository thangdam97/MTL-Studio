                    },
                    {
                        "id": "due_to_fact",
                        "regex": "\\bdue to the fact that\\b",
                        "display": "due to the fact that",
                        "fix": "Simplify: use 'because'",
                        "source": "AI wordy connector"
                    }
                ]
            },
            "manner_phrases": {
                "description": "Use adverbs instead of manner phrases",
                "patterns": [
                    {
                        "id": "in_manner",
                        "regex": "in a \\w+ manner",
                        "display": "in a [adj] manner",
                        "fix": "Use adverb: 'spoke gently' not 'spoke in a gentle manner'",
                        "source": "AI translationese"
                    }
                ]
            },
            "hedging": {
                "description": "Unnecessary hedging and filler",
                "patterns": [
                    {
                        "id": "can_be_said",
                        "regex": "it can be said that",
                        "display": "it can be said that",
                        "fix": "Just say it directly",
                        "source": "Unnecessary hedge"
                    },
                    {
                        "id": "needless_to_say",
                        "regex": "needless to say",
                        "display": "needless to say",
                        "fix": "If needless, don't say it",
                        "source": "Pointless filler"
                    }
                ]
            }
        }
    },
